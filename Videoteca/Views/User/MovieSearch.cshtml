@model Videoteca.Models.MovieGenreViewModel
<head>
    <link href="https://file.myfontastic.com/keVpAvi8SaSZiH6aNpqDJ6/icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://file.myfontastic.com/keVpAvi8SaSZiH6aNpqDJ6/icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/responsive.css" />
</head>
<h1 class="title">Search</h1>
<body>
    
    <div class="align-content-center d-flex flex-column justify-content-center align-items-center text-center m-2">
        <form asp-controller="User" asp-action="MovieSearch" method="get">

                <select asp-for="MovieGenre" asp-items="Model.Genres" id="selected">
                    <option value="">Select for genres</option>
                </select>

                <select asp-for="MovieActor" asp-items="Model.Actors" id="selected">
                    <option value="">Select for actors</option>
                </select>
            <datalist id="movie_name">
                @foreach (var item in Model.Movies!)
                {
                   <option>@item.title</option>
                }
            </datalist>
            <input class="search" type="text" list="movie_name" asp-for="SearchString" />
            <button type="submit" class="btn-info icon-search" id="btns"></button>
        </form>
    </div>
   
    <div class="searchT">
 
            @foreach (var item in Model.Movies!)
            {
            <div class="d-flex flex-column justify-content-center align-items-center m-2" id="cardM">
                <img class="movie_img" src="@item.movie_url">
                <h3>@item.title</h3>
                <p>@item.release_year</p>
                <form asp-action="InfoMovie" asp-route-id="@item.id">
                    <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">View More</button>
                </form>
                </div>
            }
   </div>

    @section scripts{
        <script>
            $('.searchT').slick({
                autoplay: true,
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });
        </script>
    }
    <!--Librerias para slick, boostrap, jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/slick-1.8.1/slick/slick.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
