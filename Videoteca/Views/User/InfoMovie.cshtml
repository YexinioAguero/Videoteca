@model IEnumerable<Videoteca.Models.MovieInfo>

@{
    ViewData["Title"] = "InfoMovie";
}

<head>
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .movie {
            width: 250px;
            height: 400px;

        }
        #text{
            display:inline-block;
            vertical-align: top;
        }
        .actor{
            width: 150px;
            height: 200px;
        }
        .slide {
            margin-top: 5%;
            align-items: center;
        }
    </style>
</head>
<body>
    
    @foreach(var item in Model)
    {
        <div class="container">
            <img class="movie" src="@item.movie.movie_url">
            <p id="text">Sypsnosis: <br> @item.movie.synopsis</p>
            <div class="slide">
                @foreach (var a in item.actors)
                {
                    <div class="d-flex flex-column justify-content-center align-items-center text-center m-2">
                        <img class="actor d-block w-auto h-auto img-thumbnail align-content-center" src="@a.actor_url">
                        <p> @a.actor_first_name @a.actor_last_name</p>
                    </div>
                }
            </div>
        </div>

    }

    <!--Librerias para slick, boostrap, jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/lib/slick-1.8.1/slick/slick.min.js"></script>
    @section scripts{
        <script type="text/javascript">
            $('.slide').slick({
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });
        </script>
    }

</body>