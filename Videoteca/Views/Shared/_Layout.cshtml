
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Videoteca</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link href="https://file.myfontastic.com/keVpAvi8SaSZiH6aNpqDJ6/icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Navegation.css" />
</head>
<body>
    <div class="nav1">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
            <div class="nav-title">
                <a title="Home" href="/Home/Index">
                    <img id="logoH" src="~/lib/videoteca.jpeg" alt="Home">
                 </a>
            </div>
        </div>
        <div class="nav-btn">
            <label for="nav-check">
                <span></span>
                <span></span>
                <span></span>
            </label>
        </div>

        <div class="nav-links">
            <ul>
                @if (User.IsInRole("superadmin"))
                {
                    <li>
                        <a href="/UserAuthentication/Registration">SuperAdmin-Index</a>
                    </li>
                    <li>
                        <a href="/Users/Index">UsersList</a>
                    </li>
                }
                else @if (User.IsInRole("admin"))
                {
                    <li>
                        <a href="/UserAuthentication/Registration">Register Users</a>
                    </li>
                    <li>
                        <a href="/Admin/MovieSearch"><label class="icon-search" id="icon-s"></label></a>
                    </li>
                    <li>
                        <a href="/Admin/View_MoviesAndSeries">Movies And Series</a>
                    </li>
                }
                else @if (User.IsInRole("user"))
                {
                    <li>
                        <a href="/User/Index">Movies And Series</a>
                    </li>
                    <li>
                        <a href="/User/Edit">Profile</a>
                    </li>
                    <li>
                        <a href="/User/MovieSearch"><label class="icon-search" id="icon-s"></label></a>
                    </li>
                    <li>
                        <a asp-controller="Webcam" asp-action="Cam">VideoTecaShareplay</a>
                    </li>
                }
                <li>
                    <a class="nav-item nav-link" href="/UserAuthentication/Logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"></script>

    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>

    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>