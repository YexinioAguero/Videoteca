@model Videoteca.Models.Episode

@{
    ViewData["Title"] = "InsertEpisodes";
}

<head>
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@(ViewBag.Message.Tipo)">
            @ViewBag.Message.Text
        </div>
    }

    <h1>Register Movies</h1>
    <hr />

    <div class="contenedor">
        <form asp-controller="Admin" asp-action="InsertEpisodes" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3 asp-for="title" class="control-label">Title</h3>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="duration" class="control-label">Duration</h3>
                <input asp-for="duration" class="form-control" />
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="episode_number" class="control-label">Episode Number</h3>
                <input asp-for="episode_number" class="form-control" />
                <span asp-validation-for="episode_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="url" class="control-label">Episode Portate</h3>
                <input asp-for="url" class="form-control" />
                <span asp-validation-for="url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="description" class="control-label">Description For Episode</h3>
                <input asp-for="descripction" class="form-control" />
                <span asp-validation-for="descripction" class="text-danger"></span>
            </div>
            
            <input type="hidden" name="movies_series_id" value="@Model.movies_series_id" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>

        </form>

    </div>

    <div>
        <form asp-action="Details_MoviesAndSeries" asp-controller="Admin" asp-route-id="@Model.movies_series_id" method="get">
            <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Go Back</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
