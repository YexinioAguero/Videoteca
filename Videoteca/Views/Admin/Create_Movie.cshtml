@model Videoteca.Models.MoviesAndSeries

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <title>Create_MovieAndSerie</title>
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@(ViewBag.Message.Tipo)">
            @ViewBag.Message.Text
        </div>
    }

    <h1>Register Movies</h1>
    <hr />

    <div class="contenedor">

        <form asp-controller="Admin" asp-action=" Create_Movie" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3 asp-for="title" class="control-label">Title</h3>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="synopsis" class="control-label">Synopsis</h3>
                <input asp-for="synopsis" class="form-control" />
                <span asp-validation-for="synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="release_year" class="control-label">Release Year</h3>
                <input asp-for="release_year" class="form-control" />
                <span asp-validation-for="release_year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="duration" class="control-label">Duration</h3>
                <input asp-for="duration" class="form-control" />
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="classification" class="control-label">Classification</h3>
                <input asp-for="classification" class="form-control" />
                <span asp-validation-for="classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="director" class="control-label">Director</h3>
                <input asp-for="director" class="form-control" />
                <span asp-validation-for="director" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="num_seasons" class="form-control" />
                <span asp-validation-for="num_seasons" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="num_episodes" class="form-control" />
                <span asp-validation-for="num_episodes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="movie_url" class="control-label">Movie or Serie Portate</h3>
                <input asp-for="movie_url" class="form-control" />
                <span asp-validation-for="movie_url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 asp-for="date_added" class="control-label">Date Added</h3>
                <input asp-for="date_added" class="form-control" />
                <span asp-validation-for="date_added" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>

        </form>

    </div>
    
    <form asp-action="View_MoviesAndSeries" asp-controller="Admin" method="get">

        <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Go Back</button>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
