@model Videoteca.Models.GenresAndMovieData

@{
    ViewData["Title"] = "Asigned Genres";
}


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    @foreach (var item in Model.MoviesAndSeries)
    {
        <div class="contenedor">

            <div>
                <img class="movie2" src="@item.movie_url">
                <h1> @item.title</h1>
                <br>
            </div>

            <div>

                <h1>
                    Select the Genre for Asigned in the @item.title
                </h1>
                <br>
                <form method="post" asp-controller="Admin" asp-action="AsignedGenre">

                    <input type="hidden" name="id_pelicula" value="@item.id" />
                    <div>
                        <select name="genre_id">
                            @foreach (var opcion in Model.Genre)
                            {
                                <option n value="@opcion.genre_id">@opcion.genre_name</option>
                                
                            }
                        </select>
                    </div>
                    <br>
                    <div>
                        <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Asigned Genre</button>
                    </div>





                </form>
            </div>

        </div>

    }


</body>

