@model Videoteca.Models.CreateGenresMcs

@{
    ViewData["Title"] = "Create_Genre";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Create_Actor</title>
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@(ViewBag.Message.Tipo)">
            @ViewBag.Message.Text
        </div>
    }

    <h1>Register The Genre For Movies Or Series</h1>
    <hr />

    <div class="contenedor">

        <form asp-controller="Admin" asp-action="CreateGenres" method="post">

            <input type="hidden" name="movie_id" value="@Model.movie_id" />

            <div class="form-group">
                <h3 class="control-label">Genre Name</h3>
                <input name="genre_name" class="form-control" />
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>

        </form>

    </div>


    <div>
        <form asp-action="AsignedGenres" asp-controller="Admin" method="get">
            <input type="hidden" name="id_pelicula" value="@Model.movie_id" />
            <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Go Back</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

