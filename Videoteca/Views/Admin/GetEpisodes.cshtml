@model Videoteca.Models.EpisodeSeries
<head>
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
    <link href="https://file.myfontastic.com/keVpAvi8SaSZiH6aNpqDJ6/icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
</head>
<body>
    <div>
        <form asp-controller="Admin" asp-action="InsertEpisodes" method="get">
            <input type="hidden" name="id_pelicula" value="@Model.id_serie" />
            <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">
                Insert Episode
            </button>
        </form>
    </div>
        <div class="slideE">
            <h1> Episodes</h1>
            @foreach (var item in Model.episodes)
            {
                @if (item.title != null)
                {
                    <div class="episodes d-flex flex-column justify-content-center align-items-center text-center m-2">
                        <img id="imgE" src="@item.url">
                        <div class="textoE">
                            <h3>@item.title - @item.episode_number</h3>
                            <h4>@item.duration</h4>
                            <p>@item.descripction</p>
                        </div>
                    </div>

                }
                else
                {
                    <div class="bg-white" id="user-date">
                        There's no episodes..
                    </div>
                }

            }
        </div>

    <script>
        $('.slideE').slick({
            autoplay: true,
            infinite: true,
            speed: 500,
            slidesToShow: 3,
            fade: true,
            cssEase: 'linear'
        });
    </script>

    <!--Librerias para slick, boostrap, jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/slick-1.8.1/slick/slick.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

</body>