@model Videoteca.Models.MoviesAndSeries

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Delete_MovieAndSerie</title>
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@(ViewBag.Message.Tipo)">
            @ViewBag.Message.Text
        </div>
    }

    <div>
        <br>
        <br>
        <div class="contenedor">
            <div>
                <h2>@Model.title</h2>
                <br>
                <img class="movie2" src="@Model.movie_url">
            </div>
            <div>
                <br>
                <br>
                <br>
                <h3>Are you sure you want to delete this?</h3>
                <br>
                <br>
                <form asp-action="Delete_MovieAndSerie">
                    <input type="hidden" asp-for="id" />
                    <input id="viewM"  type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <br>
                <form asp-action="Details_MoviesAndSeries" asp-controller="Admin" method="get">
                    <input type="hidden" name="id" value="@Model.id" />
                    <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Go Back</button>
                </form>
            </div>

        </div>



    </div>
</body>
</html>
