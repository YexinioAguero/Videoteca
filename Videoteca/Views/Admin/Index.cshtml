@model IEnumerable<Videoteca.Models.MoviesAndSeries>

@{
    ViewData ["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
<p>
    <a asp-action="Create_MovieAndSerie">Register Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <H2>Movie Name</H2>
            </th>
            <th>
                <H2>Movie Portate</H2>
            </th>
            <th>
                <H2>Date Added</H2>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                <img src="@item.movie_url" width="50px" height="50px"></img>
           @*     @Html.DisplayFor(modelItem => item.movie_url)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_added)
            </td>
            <td>
                <a asp-action="Edit_MovieAndSerie" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details_MoviesAndSeries" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete_MovieAndSerie" asp-route-id="@item.id">Delete</a>
            </td>
            
        </tr>
}


    </tbody>
</table>
</body>
</html>
