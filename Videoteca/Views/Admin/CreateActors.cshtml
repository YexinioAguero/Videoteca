@model Videoteca.Models.CreateActorMcs

@{
    ViewData["Title"] = "Create_Actors";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stylos.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <title>Create_Actor</title>
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@(ViewBag.Message.Tipo)">
            @ViewBag.Message.Text
        </div>
    }

    <h1>Register The Actor For Movies Or Series</h1>
    <hr />

    <div class="contenedor">

        <div class="viewM">
            <br>
            <br>
            <br>
            <img src="@Model.url" height="250" width="250"></img>
            <h1>@Model.title</h1>
            <br>
            <div>
                <form asp-action="AsignedActors" asp-controller="Admin" method="get">
                    <input type="hidden" name="id_pelicula" value="@Model.movie_id" />
                    <button id="viewM" class="btn btn-info align-items-xxl-center" type="submit">Go Back</button>
                </form>
            </div>
        </div>
        <div>
            <br>
            <br>
            <br>
            <form asp-controller="Admin" asp-action="CreateActors" method="post">

                <input type="hidden" name="movie_id" value="@Model.movie_id" />

                <div class="form-group">
                    <h3 class="control-label">Actor First Name</h3>
                    <input name="actor_first_name" class="form-control" />
                </div>
                <div class="form-group">
                    <h3 class="control-label">Actor Last Name</h3>
                    <input name="actor_last_name" class="form-control" />
                </div>
                <div class="form-group">
                    <h3 asp-for="title" class="control-label">Profile photo of the actor</h3>
                    <input name="actor_url" class="form-control" />
                </div>



                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>

            </form>

        </div>
        

    </div>


    

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
